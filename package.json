    "bcrypt": "^4.0.1",
    "express": "^4.17.1",
    "gh-pages": "^4.0.0",
    "graphql": "^15.5.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.10",
    "if-env": "^1.0.4"
  },
